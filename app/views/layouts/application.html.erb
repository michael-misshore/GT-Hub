<!DOCTYPE html>
<html>
<head>
  <title>GTHub | <%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <% #javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script src="/javascripts/jquery.js"></script>
</head>
<body>
<div id="header">
	<ul id="header-nav">
		<li><a href="/">Home</a></li>
		<li><a href="/tunes">Tune Database</a></li>
		<% if user_signed_in? %>	
			<li><%= link_to 'Account', user_path(current_user) %></li>
			<li><%= link_to 'Logout', destroy_user_session_path %></li>
		<% else %>
			<li><%= link_to 'Login', new_user_session_path %></li>
		<% end %>
	</ul>
	<div id="logo">
		<%= image_tag("logo.png") %>
	</div>
</div>
<div id="content-wrapper">
	<div id='content-header'>
		<%= image_tag("content-header.png") %>
		<h1 id="content-header-text"><%= @title %></h1>
	</div>
	<div id="content-sub-wrapper">
		<div id="content">
			<!-- Flash Messages -->
			<% flash.each do |name, msg| %>
			      <%= content_tag :h2, msg, :id => "flash_#{name}" %>
			<% end %>
			<!-- Yield For Actual Content -->
			<%= yield %>
		</div>
	</div>
</div>
</body>
</html>
