<p id="notice"><%= notice %></p>

<div id="tunetabs">
	<ul>
		<li><a href="#basic_info">Basic</a></li>
		<% @groups.each do | group, subgroups | %>
			<li><a href="#<%= group.downcase.gsub(/(\s|\/)/, "_") %>"><%= group %></a></li>
		<% end %>
	</ul>
	
	
	<div id="basic_info">
		<h2><%= @tune.car.display_name %> Tune</h2>
		<p><h3><b>Tuner:</b> <%= @tune.tuner.tuner_name %></h3></p>

		<p>
		  <b>Karma:</b>
		  <%= @tune.karma %>
		</p>

		<p>
		  <b>Track:</b>
		  <%= @tune.track.name %>
		</p>

		<p>
		  <b>Type:</b>
		  <%= @tune.tune_type %>
		</p>
	</div>
	
	<%= render :partial => 'tunes/_show/parts', :locals => { :groups => @groups, :tune => @tune } %>
</div>

<% if @tune.tuner_id == current_tuner.id %>
	<%= link_to 'Edit', edit_tune_path(@tune) %> |
<% end %>
<%= link_to 'Back', tunes_path %>

<script>
$(document).ready(function() {
	$("#tunetabs").tabs();
});
</script>